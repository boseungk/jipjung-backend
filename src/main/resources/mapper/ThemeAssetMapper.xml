<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jipjung.project.repository.ThemeAssetMapper">

    <!-- Result Map -->
    <resultMap id="ThemeAssetResultMap" type="com.jipjung.project.domain.ThemeAsset">
        <id property="assetId" column="asset_id"/>
        <result property="themeId" column="theme_id"/>
        <result property="level" column="level"/>
        <result property="imageUrl" column="image_url"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <!-- 테마 + 레벨로 에셋 조회 (활성 테마만) -->
    <select id="findByThemeAndLevel" resultMap="ThemeAssetResultMap">
        SELECT ta.*
        FROM theme_asset ta
        INNER JOIN house_theme ht ON ta.theme_id = ht.theme_id
        WHERE ta.theme_id = #{themeId}
          AND ta.level = #{level}
          AND ta.is_deleted = false
          AND ht.is_active = true
          AND ht.is_deleted = false
    </select>

</mapper>
