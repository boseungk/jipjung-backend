<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jipjung.project.repository.GrowthLevelMapper">

    <!-- Result Map -->
    <resultMap id="GrowthLevelResultMap" type="com.jipjung.project.domain.GrowthLevel">
        <id property="level" column="level"/>
        <result property="stepName" column="step_name"/>
        <result property="description" column="description"/>
        <result property="requiredExp" column="required_exp"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <!-- 레벨로 조회 -->
    <select id="findByLevel" resultMap="GrowthLevelResultMap">
        SELECT *
        FROM growth_level
        WHERE level = #{level}
          AND is_deleted = false
    </select>

    <!-- 총 레벨 수 -->
    <select id="countAll" resultType="int">
        SELECT COUNT(*)
        FROM growth_level
        WHERE is_deleted = false
    </select>

</mapper>
